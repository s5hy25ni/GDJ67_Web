<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.min.edu.model.BoardPageImpl">
	
	<resultMap type="rtVo" id="rootMap">
		<result column="SEQ" property="seq" />
		<result column="ID" property="id" />
		<result column="TITLE" property="title" />
		<result column="CONTENT" property="content" />
		<result column="REGDATE" property="regdate" />
		
		<collection property="fileVo" resultMap="fileMap"></collection>
		<collection property="replyVo" resultMap="replyMap"></collection>
	</resultMap>
	<resultMap type="fVO" id="fileMap">
		<result column="ORIGIN_FNAME" property="originFname"/>
		<result column="STORED_FNAME" property="storedFname"/>
		<result column="FILE_SIZE" property="fileSize"/>
	</resultMap>
	<resultMap type="rpVo" id="replyMap">
		<result column="RP_TITLE" property="title"/>
		<result column="RP_REGDATE" property="regdate"/>
	</resultMap>

	<select id="getDetail" parameterType="java.lang.String" resultMap="rootMap">
		SELECT rt.SEQ, rt.ID, rt.TITLE, rt.CONTENT, rt.REGDATE, ORIGIN_FNAME , STORED_FNAME , FILE_SIZE, rp.TITLE RP_TITLE, rp.REGDATE RP_REGDATE 
			FROM ROOTBOARD rt LEFT JOIN (SELECT B_SEQ , ORIGIN_FNAME , STORED_FNAME , FILE_SIZE
											FROM FILEBOARD
											WHERE F_DELFLAG = 'N'
												AND B_SEQ = #{seq}) f 
			ON rt.SEQ = B_SEQ LEFT JOIN (SELECT SEQ, "REF", TITLE, REGDATE 
											FROM REPLYBOARD
												WHERE "REF"=#{seq}
												ORDER BY SEQ) rp
			ON rt.SEQ = "REF"
			WHERE rt.SEQ = #{seq}
				AND <![CDATA[ROWNUM<4]]>
	</select>
	
	<select id="getReply" parameterType="java.util.Map" resultType="rpVo">
		SELECT TITLE, REGDATE
			FROM (SELECT TITLE, REGDATE,
				ROW_NUMBER() OVER(ORDER BY SEQ) RN
				FROM REPLYBOARD
				WHERE "REF"=#{ref})
			WHERE RN BETWEEN #{start} AND #{end}
	</select>
	
	<insert id="insertRoot">
		<selectKey resultType="java.lang.Integer" keyProperty="seq" order="BEFORE">
			SELECT NVL(MAX(SEQ), 0)+1 FROM ROOTBOARD
		</selectKey>
		INSERT INTO ROOTBOARD(SEQ, ID, TITLE, 
								CONTENT, REGDATE)
					VALUES(#{seq}, #{id}, #{title}, 
								#{content}, SYSDATE)
	</insert>
	
	<insert id="insertFile">
		INSERT INTO FILEBOARD(F_SEQ, B_SEQ, WRITER, 
						ORIGIN_FNAME, STORED_FNAME, FILE_SIZE, 
						F_REGDATE, F_DELFLAG)
				VALUES((SELECT NVL(MAX(F_SEQ), 0)+1 FROM FILEBOARD), 2, 'TEST', 
						'TEST NAME 01', 'asfsfdsfaasdfsefcx', 1, 
						SYSDATE, 'N')
	</insert>
</mapper>
